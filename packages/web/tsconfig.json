{
  "extends": "../../tsconfig",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "paths": {
      "~/assets/*": ["./src/assets/*"],
      "~/components/*": ["./src/components/*"],
      "~/domain/*": ["./src/domain/*"],
      "~/infrastructure/*": ["./src/infrastructure/*"]
    }
  }
}
