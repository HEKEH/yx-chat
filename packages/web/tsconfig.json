{
  "extends": "../../tsconfig",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "paths": {
      "~/assets/*": ["./src/assets/*"],
      "~/common/*": ["./src/common/*"],
      "~/components/*": ["./src/components/*"],
      "~/domain/*": ["./src/domain/*"],
      "~/infrastructure/*": ["./src/infrastructure/*"],
      "~/types/*": ["./src/types/*"],
      "~/utils/*": ["./src/utils/*"]
    }
  }
}
